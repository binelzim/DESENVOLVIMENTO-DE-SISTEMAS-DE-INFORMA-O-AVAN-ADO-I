@model Universidade.Application.ViewModels.DisciplinaViewModel

@{
    ViewData["Title"] = "Nova Disciplina";
}

<h1>Nova Disciplina</h1>

<h4>Preencha os dados</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="CargaHoraria" class="control-label"></label>
                <input asp-for="CargaHoraria" class="form-control" />
                <span asp-validation-for="CargaHoraria" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="CursoId" class="control-label">Curso</label>
                <select asp-for="CursoId" class="form-control" asp-items="ViewBag.CursoId">
                    <option value="">-- Selecione um Curso --</option>
                </select>
                <span asp-validation-for="CursoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}