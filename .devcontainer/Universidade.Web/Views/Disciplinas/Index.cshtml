@model IEnumerable<Universidade.Application.ViewModels.DisciplinaViewModel>

@{
    ViewData["Title"] = "Disciplinas";
}

<h1>Lista de Disciplinas</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-primary">Nova Disciplina</a>

    <div class="col-md-4">
        <input type="text" id="campoBusca" class="form-control" placeholder="Pesquisar disciplina..." />
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.CargaHoraria)</th>
            <th>@Html.DisplayNameFor(model => model.CursoNome)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody id="tabelaCorpo">
        <partial name="_TabelaDisciplinas" model="Model" />
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#campoBusca").on("keyup", function () {
                var valor = $(this).val();

                $.ajax({
                    url: '@Url.Action("Filtrar", "Disciplinas")',
                    type: 'GET',
                    data: { termo: valor },
                    success: function (dados) {
                        // Substitui o conteúdo do tbody pelo HTML que veio do servidor
                        $("#tabelaCorpo").html(dados);
                    },
                    error: function () {
                        alert("Erro ao buscar disciplinas.");
                    }
                });
            });
        });
    </script>
}